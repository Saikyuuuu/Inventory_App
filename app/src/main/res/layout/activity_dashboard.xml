        android:id="@+id/InventoryBtn1"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/inventory_design"
        android:drawableLeft="@drawable/inventory"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Inventory"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/InventoryBtn2"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="22dp"
        android:background="@drawable/inventory_design"
        android:drawableLeft="@drawable/inventory"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Inventory"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InventoryBtn" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/InventoryBtn3"
        android:layout_width="150dp"
        android:layout_height="55dp"
